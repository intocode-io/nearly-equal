{
  "name": "@intocode-io/nearly-equal",
  "version": "1.0.4",
  "description": "A function to compare Float without worry about something like 0.1 + 0.2 != 0.3",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run build && jest --coverage",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intocode-io/nearly-equal.git"
  },
  "keywords": [
    "almost equal",
    "approximately equal",
    "nearly equal"
  ],
  "author": "Satana Charuwichitratana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/intocode-io/nearly-equal/issues"
  },
  "homepage": "https://github.com/intocode-io/nearly-equal#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js",
      "src/**/*.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|js)"
    ]
  }
}
